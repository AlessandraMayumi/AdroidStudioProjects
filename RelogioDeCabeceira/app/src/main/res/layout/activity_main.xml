<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0099cc"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp">
        <TextView
            android:id="@+id/text_battery_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nivel_da_bateria"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center|bottom">
        <TextView android:id="@+id/text_hour_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='00:00'
            android:textSize="125sp"/>
        <TextView android:id="@+id/text_second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='00'
            android:textSize="40sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:padding="20dp">
        <ImageView
            android:id="@+id/image_option"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/ic_menu_preferences"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/preferences"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/options">
        <CheckBox android:id='@+id/check_battery'
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:padding="30dp"
            android:text="@string/nivel_da_bateria"/>
        <ImageView
            android:id="@+id/image_close"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="20dp"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="@string/close"/>
    </LinearLayout>

</RelativeLayout>